{
    "name": "steamscore/api",
    "description": "SteamScore API",
    "type": "project",
    "homepage": "https://steamscore.info",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Jonas Stendahl",
            "email": "jonas@stendahl.me"
        }
    ],
    "support": {
       "issues": "https://github.com/jyggen/SteamScore/issues",
       "source": "https://github.com/jyggen/SteamScore"
    },
    "require": {
        "php": "^7.1",
        "bandwidth-throttle/token-bucket": "^1.0",
        "beberlei/assert": "^2.0",
        "enqueue/enqueue": "^0.1",
        "filp/whoops": "^2.0",
        "doctrine/orm": "^2.0",
        "guzzlehttp/guzzle": "^6.0",
        "lcobucci/jwt": "^3.0",
        "monolog/monolog": "^1.0",
        "predis/predis": "^1.0",
        "ramsey/uuid": "^3.0",
        "ramsey/uuid-doctrine": "^1.0",
        "roave/security-advisories": "dev-master",
        "sebastian/version": "^2.0",
        "symfony/console": "^3.0",
        "tobscure/json-api": "^0.3",
        "vlucas/phpdotenv": "^2.0",
        "zendframework/zend-expressive": "^1.0",
        "zendframework/zend-expressive-helpers": "^2.0",
        "zendframework/zend-expressive-zendrouter": "^1.0",
        "zendframework/zend-servicemanager": "^3.0",
        "zendframework/zend-stdlib": "^3.0"
    },
    "require-dev": {
        "etsy/phan": "^0.7",
        "friendsofphp/php-cs-fixer": "^v2.0",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "phpro/grumphp": "^0.11",
        "phpspec/prophecy": "^1.0",
        "phpunit/phpunit": "^5.0",
        "sebastian/phpcpd": "^2.0",
        "sensiolabs/security-checker": "^4.0",
        "symfony/var-dumper": "^3.0"

    },
    "autoload": {
        "psr-4": {
            "SteamScore\\Api\\": "src/"
        },
        "files": [
            "functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SteamScore\\Api\\Tests\\": "test/"
        }
    },
    "config": {
        "platform": {
            "php": "7.1"
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "generate-docs": [
            "node_modules/.bin/aglio -i docs/steamscore.v1.apib -o build/steamscore.v1.html --theme-full-width --theme-template triple"
        ],
        "serve": [
            "php -S 0.0.0.0:8080 -t web web/index.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "bin": [
        "bin/console"
    ]
}
